{
  "name": "docker-tests",
  "displayName": "Docker Tests",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
			{
				"command": "extension.runAllTests",
				"title": "Django Tests: Run All Tests"
			}
		],
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ]
      }
    ],
    "debuggers": [
      {
        "type": "python",
        "label": "Python",
        "languages": [
          "python"
        ],
        "configurationSnippets": [
          {
            "label": "Launch",
            "description": "Launch a Python file",
            "body": {
              "name": "Python: Launch",
              "type": "python",
              "request": "launch",
              "program": "${file}",
              "console": "integratedTerminal"
            }
          },
          {
            "label": "Attach",
            "description": "Attach to a running Python process",
            "body": {
              "name": "Python: Attach",
              "type": "python",
              "request": "attach",
              "port": 5678,
              "host": "localhost"
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "Docker Tests",
      "properties": {
        "docker-tests.command": {
          "type": "string",
          "default": "docker compose exec wsgi_backend python manage.py test",
          "description": "The command to execute the tests."
        },
        "docker-tests.app": {
          "type": "string",
          "default": "naranjas_daniel",
          "description": "The name of the app where the tests reside."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
